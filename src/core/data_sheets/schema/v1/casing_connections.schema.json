{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://drishya.ai/casing_connections.schema.json",
    "title": "Casing Connections Schema",
    "description": "",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "property_name": {
                "title": "Property Name",
                "type": "string",
                "description": "Name of the property"
            },
            "property_value": {
                "title": "Property Value",
                "type": "string",
                "description": "Value of the property"
            },
            "properties_notes": {
                "title": "Property Notes",
                "type": "string",
                "description": "An extra information that is related to the property which in mentioned in general"
            },
            "data_sheet_section": {
                "title": "Data Sheet Section",
                "type": "string",
                "description": "Specifies the source or origin of the property extracted from the datasheet's specific section. For example 'PERFORMANCE_OF_ONE_UNIT', 'PROCESS_DATA', etc"
            },
            "context": {
                "type": "object",
                "title": "Context",
                "description": " ",
                "properties": {
                    "context_name": {
                        "type": "string",
                        "description": "Every property that captured in data sheet would be fall in certain context. It may be NOZZLE, EQUIPMENT, SUB_PART.",
                        "anyOf": [
                            {
                                "const": "EQUIPMENT",
                                "description": "If the property is associated with the equipment, then the particular property context should be equipment"
                            },
                            {
                                "const": "NOZZLE",
                                "description": "If the property is associated with the nozzle, then the particular property context should be nozzle"
                            },
                            {
                                "const": "SUB_PART",
                                "description": "If the property is associated with the sub_part, then the particular property context should be sub_part."
                            }
                        ]
                    },
                    "size_nps_rating": {
                        "type": "string",
                        "title": "Size NPS/Rating",
                        "description": "Nozzle size in terms of nps"
                    },
                    "facing": {
                        "type": "string",
                        "title": "Facing",
                        "description": "Nozzle orientation"
                    },
                    "position": {
                        "type": "string",
                        "title": "Position",
                        "description": ""
                    },
                    "flanged_or_studded": {
                        "type": "string",
                        "title": "Flanged or Studded",
                        "description": ""
                    },
                    "mating_flg_and_gasket_by_vendor": {
                        "type": "string",
                        "title": "Mating Flg and Gasket by Vendor",
                        "description": ""
                    },
                    "gas_velocity": {
                        "type": "number",
                        "title": "Gas Velocity",
                        "description": ""
                    }
                }
            }
        },
        "required": [
            "property_name",
            "property_value",
            "property_notes",
            "data_sheet_section",
            "context"
        ]
    }
}